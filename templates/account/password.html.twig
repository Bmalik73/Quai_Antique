{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - Quai Antique{% endblock %}

{% block content %}
    <h1></h1>
    <a href="{{ path('app_account') }}">Retourner à mon compte</a><br/>
    <hr>

    <div class="row">
        <div class="col-md-8">{{ form(form) }}</div>
        <div class="col-md-4">
            <strong>Quai Antique</strong>
            <hr>
            06 06 06 06 06
            416 Av. des Alpes, 73000 Chambéry.</br>
            contact@quaiantique.fr<br/>
        </div>
    </div>
    <hr>
{% endblock %}
{% block javascripts %}
    <script>
        const title = document.querySelector("h1");
        const text = "Modifier mon mot de passe";

        function typewriter(text, index) {
            if (index < text.length) {
                setTimeout(() => {
                    title.innerHTML += `<span>${text[index]}</span>`;
                    typewriter(text, index + 1);
                }, 100);
            }
        }

        setTimeout(() => {
            typewriter(text, 0);
        }, 5);
    </script>
{% endblock %}
